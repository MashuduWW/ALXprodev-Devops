#!/bin/bash

# Output CSV file
REPORT_FILE="pokemon_report.csv"

# CSV Header
echo "Name,Height(m),Weight(kg)" > "$REPORT_FILE"

# Loop through all JSON files
for file in *.json; do
  # Extract values using jq
  name=$(jq -r '.name' "$file")
  height_dm=$(jq -r '.height' "$file")
  weight_hg=$(jq -r '.weight' "$file")

  # Convert units using awk
  height_m=$(awk "BEGIN {printf \"%.1f\", $height_dm / 10}")
  weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight_hg / 10}")

  # Capitalize name using sed (first letter only)
  name=$(echo "$name" | sed 's/^./\U&/')

  # Append to CSV
  echo "$name,$height_m,$weight_kg" >> "$REPORT_FILE"
done

# Display CSV contents
echo -e "\nðŸ“„ PokÃ©mon Report:"
cat "$REPORT_FILE"

# Calculate averages using awk
echo -e "\nðŸ“Š Averages:"
awk -F',' 'NR > 1 {
  height += $2
  weight += $3
  count++
}
END {
  if (count > 0) {
    printf "Average Height: %.2f m\n", height / count
    printf "Average Weight: %.2f kg\n", weight / count
  } else {
    print "No data available."
  }
}' "$REPORT_FILE"
